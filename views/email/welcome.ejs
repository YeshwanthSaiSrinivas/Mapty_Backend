<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v2.1.6/css/unicons.css">
    <link rel="stylesheet" href="./css/register.css">
    </head>

    <body>
        <div class="container">
            <form id="verify-form" action="/verifyotp" method="post">
                <h2 class="title">Verify Email</h2>
                <p style="margin-top: 4%;margin-bottom: 2%;">Verify your email</p>
                <div class="input-field">
                    <i class="uil uil-envelope-lock"></i>
                    <input type="text" name="otp" id="otp" placeholder="Enter the OTP">
                </div>
                <input type="hidden" name="email" id="email" value="<%=email%>">
                <div class="info">
                    <p>
                        <%=info%>
                    </p>
                </div>
                <div class="warning">
                    <p>
                        <%=warning%>
                    </p>
                </div>

                <input type="submit" value="Verify" class="btn btn-primary">
            </form>
            <form action="resendotp" method="post">
                <input type="hidden" name="email" id="email" value="<%=email%>">
                <input type="submit" value="Resend OTP" class="info-btn">
            </form>
        </div>
        <script src="./js/register.js"></script>
    </body>

    </html>